{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./src",  // Set the baseUrl to the src directory
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./public",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],  // Include all TypeScript files under src
  "exclude": ["node_modules"]
}
